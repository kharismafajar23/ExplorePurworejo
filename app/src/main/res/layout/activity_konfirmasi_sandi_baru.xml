<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".MasukDanDaftar.KonfirmasiSandiBaruActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_katasandibaru"/>

        <TextView
            android:text="@string/kata_sandi_baru"
            android:textSize="28sp"
            android:textColor="@color/main_text_color"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <TextView
            android:text="@string/desc_kata_sandi_baru"
            android:textSize="14sp"
            android:textColor="@color/main_text_color"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:lineHeight="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16px"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETkata_sandi_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/kata_sandi_baru"
            app:hintTextColor="@color/text_color"
            app:boxStrokeColor="@color/text_color"
            app:boxStrokeWidthFocused="1dp"
            app:endIconMode="password_toggle"
            android:layout_marginTop="18dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_color"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETkonfirmasi_kata_sandi_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/konfirmasi_kata_sandi"
            app:hintTextColor="@color/text_color"
            app:boxStrokeColor="@color/text_color"
            app:boxStrokeWidthFocused="1dp"
            app:endIconMode="password_toggle"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_color"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verifikasi_kode"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/putih"
            android:textAllCaps="false"
            android:background="@drawable/bg_button"
            android:layout_marginTop="80dp"
            android:onClick="keSuksesupdateSandi"/>

    </LinearLayout>

</ScrollView>