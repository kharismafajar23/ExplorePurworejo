<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilkanRute"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/btn_kembali_tampilkan_rute"
        android:src="@drawable/ic_kembali_bghijau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/TV_nama_wisata_tampilkan_rute"
        android:text="Nama Wisata"
        style="@style/main_text_2"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/TV_alamat_wisata_tampilkan_rute"
        android:text="Alamat Wisata"
        style="@style/main_text_3"/>

</LinearLayout>

