<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:shape_roundRect_bottomLeftRadius="8dp"
            app:shape_roundRect_bottomRightRadius="8dp"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_topRightRadius="8dp">

            <ImageView
                android:id="@+id/IV_thumbnail_wisata_rekomendasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/nama_wisata_rekomendasi"
            android:textColor="@color/main_text_color"
            style="@style/nama_wisata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/TV_alamat_wisata_rekomendasi"
            style="@style/alamat_wisata_hasil_pencarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>