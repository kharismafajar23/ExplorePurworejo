<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:shape_roundRect_bottomLeftRadius="6dp"
            app:shape_roundRect_bottomRightRadius="6dp"
            app:shape_roundRect_topLeftRadius="6dp"
            app:shape_roundRect_topRightRadius="6dp">

            <ImageView
                android:id="@+id/IV_thumbnail_wisata_kategori"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/TV_nama_wisata_kategori"
            style="@style/nama_wisata"
            android:text="Nama Wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/TV_alamat_wisata_kategori"
            style="@style/alamat_wisata_hasil_pencarian"
            android:text="Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>